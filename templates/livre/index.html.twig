{% extends 'base.html.twig' %}

{% block title %}Livre index{% endblock %}

{% block body %}
    <h1 class="pt-6 pb-6 text-center uppercase font-bold text-xl" >Livre index</h1>
    <div class=" pt-12tableau flex items-stretch justify-center ">
        <table class="m-2">
            <thead class="m-2"  >
                <tr class=" border-2 px-2 ">
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Date parution</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for livre in livres %}
                <tr class="">
                    <td>{{ livre.id }}</td>
                    <td>{{ livre.Titre }}</td>
                    <td>{{ livre.dateParution }}</td>
                    <td>
                        <a class="no-underline bg-purple-800 rounded-full  p-1 text-white" href="{{ path('livre_show', {'id': livre.id}) }}">show</a>
                        <a class="no-underline bg-purple-800 rounded-full  p-1 text-white"href="{{ path('livre_edit', {'id': livre.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class=" flex justify-center ">
        <a class=" no-underline     bg-purple-800 rounded-full   p-1 text-white" href="{{ path('livre_new') }}">Create new</a>
    </div>
{% endblock %}
